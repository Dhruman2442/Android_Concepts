<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	tools:context=".MainActivity">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:padding="10dp">

			<TextView
				android:textColor="@color/black"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:text="Data From Intent : "
				android:textSize="19sp"></TextView>


			<androidx.cardview.widget.CardView
				android:layout_margin="10dp"
				app:contentPadding="10dp"
				app:cardCornerRadius="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">


				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Name : "
							android:textSize="17sp"></TextView>

						<TextView
							android:id="@+id/name"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Name : "
							android:textSize="17sp"></TextView>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Email : "
							android:textSize="17sp"></TextView>

						<TextView
							android:id="@+id/email"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Email : "
							android:textSize="17sp"></TextView>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Number : "
							android:textSize="17sp"></TextView>

						<TextView
							android:id="@+id/number"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Number : "
							android:textSize="17sp"></TextView>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Gender : "
							android:textSize="17sp"></TextView>

						<TextView
							android:id="@+id/gender"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Gender : "
							android:textSize="17sp"></TextView>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Password : "
							android:textSize="17sp"></TextView>

						<TextView
							android:id="@+id/password"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="password : "
							android:textSize="17sp"></TextView>

					</LinearLayout>

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<TextView
				android:textColor="@color/black"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:text="Data From Sharedpref : "
				android:textSize="19sp"></TextView>

			<androidx.cardview.widget.CardView
				android:layout_margin="10dp"
				app:contentPadding="10dp"
				app:cardCornerRadius="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">


				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Name : "
							android:textSize="17sp"></TextView>

						<TextView
							android:id="@+id/name_sha"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Name : "
							android:textSize="17sp"></TextView>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Email : "
							android:textSize="17sp"></TextView>

						<TextView
							android:id="@+id/email_sha"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Email : "
							android:textSize="17sp"></TextView>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Number : "
							android:textSize="17sp"></TextView>

						<TextView
							android:id="@+id/number_sha"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Number : "
							android:textSize="17sp"></TextView>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Gender : "
							android:textSize="17sp"></TextView>

						<TextView
							android:id="@+id/gender_sha"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Gender : "
							android:textSize="17sp"></TextView>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="Password : "
							android:textSize="17sp"></TextView>

						<TextView
							android:id="@+id/password_sha"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:text="password : "
							android:textSize="17sp"></TextView>

					</LinearLayout>


				</LinearLayout>

			</androidx.cardview.widget.CardView>


			<Button
				android:id="@+id/logout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="10dp"
				android:background="@drawable/blue"
				android:gravity="center"
				android:text="Logout"
				android:textAllCaps="false"
				android:textColor="@color/white"
				android:textSize="17sp"></Button>


		</LinearLayout>


	</ScrollView>


</LinearLayout>